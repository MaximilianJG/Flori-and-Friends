<div class="content pt-3">
  <%= form_for [@dog, @contact] do |f| %>
    <% if @contact.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

        <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <h2>Kontakt</h2>
    <div class="field">
      <%= f.label "Name*" %><br />
      <%= f.text_field :name, required: true %>
    </div>
    <div class="field">
      <%= f.label "Email*" %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label "Telefon" %><br />
      <%= f.text_field :phone_number %>
    </div>
    <div class="field">
      <%= f.label "Anfrage*" %><br />
      <%= f.text_area :message %>
    </div>

    <div class="actions">
      <%= f.submit "Anfrage senden", class: "submit-btn" %>
    </div>
  <% end %>
</div>

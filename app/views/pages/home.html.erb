    <div class="homepage-content d-flex justify-content-between">
      <div class="row w-100">

        <% unless @dog.nil? %>
        <div class="col-6">
          <h2>Hund des Monats</h2>
          <div class="d-flex mt-3">
            <%= link_to dog_path(@dog) do  %>
              <% if @dog.photos.attached? %>
                <%= cl_image_tag @dog.photos.first.key, width: "230px", height: "230px", class: "feature-image" %>
              <% else %>
                  <%= cl_image_tag "b08hxPY_jhyrxg", class: "feature-image" %>
              <% end %>
            <% end %>
            <div class="feature-text-div text-left">
              <div class="feature-title">
                <p class="text"><strong><%= @dog.name %></strong></p>
              </div>
              <div class="feature-description">
                <p class="text">Rasse: <%= @dog.race %></p>
                <p class="text">Alter: ca. <%= age(@dog.birthdate) %></p>
                <p class="text">Geschlecht: <%= @dog.gender %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>

        <div class="col-6">
          <% unless @news_post.nil? %>
            <h2><%= @news_post.title %></h2>
            <div class="d-flex mt-3">
              <div>
                <%= link_to news_posts_path do %>
                <% if @news_post.photo.attached? %>
                  <%= cl_image_tag @news_post.photo.key, width: "230", height: "230", class: "news-post-image" %>
                <% end %>
                <% end %>
              </div>
              <div class="feature-text-div">
                <div class="feature-description news-post-home-text">
                  <%= simple_format(@news_post.content) %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
